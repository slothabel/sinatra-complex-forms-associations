<h1>Create a new Pet</h1>

<form action="/pets" method="POST">
  <label>Pet Name:</label>
  <br>
  <input type="text" name="pet_name">
  <br>
  <p>Select an existing owner or create a new one below.</p>


  <h3>Existing Owners</h3>
  <% @owner.each do |o| %>
    <input type="checkbox" name="pet[owner_id][]" id="<%= o.id %>" value="<%= o.id %>"><%= o.name %></input><br>
  <% end %>
  <br>
  <h3>New Owner</h3>
  <label>Owner Name: </label>
  <br>
  <input type="text" name="owner_name" id="owner_name"></input>
  <br><br>

  <input type="submit" value="Create Owner">

</form>